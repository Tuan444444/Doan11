@model IEnumerable<DA.Models.LichSuLuuTru>
@{
    ViewBag.Title = "Lịch sử lưu trú";
    Layout = "_ChuLayout";
}

<h2 class="mt-3">📋 Danh sách lịch sử lưu trú</h2>

<form method="get" class="row g-3 mb-3">
    <div class="col-md-3">
        <label>Người thuê</label>
        <select name="maNguoiThue" class="form-select">
            <option value="">-- Tất cả --</option>
            @foreach (var item in ViewBag.NguoiThues as SelectList)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>
    <div class="col-md-3">
        <label>Phòng</label>
        <select name="maPhong" class="form-select">
            <option value="">-- Tất cả --</option>
            @foreach (var item in ViewBag.Phongs as SelectList)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>
    <div class="col-md-2">
        <label>Từ ngày</label>
        <input type="date" name="tuNgay" class="form-control" />
    </div>
    <div class="col-md-2">
        <label>Đến ngày</label>
        <input type="date" name="denNgay" class="form-control" />
    </div>
    <div class="col-md-2 align-self-end">
        <button type="submit" class="btn btn-primary">🔍 Lọc</button>
    </div>
</form>

<a asp-action="Create" class="btn btn-success mb-3">➕ Thêm mới</a>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Người thuê</th>
            <th>Phòng</th>
            <th>Ngày bắt đầu</th>
            <th>Ngày kết thúc</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NguoiThue?.HoTen</td>
                <td>@item.Phong?.TenPhong</td>
                <td>@item.NgayBatDau.ToString("dd/MM/yyyy")</td>
                <td>@item.NgayKetThuc.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.MaLichSu" class="btn btn-info btn-sm">👁️ Xem</a>
                    <a asp-action="Edit" asp-route-id="@item.MaLichSu" class="btn btn-warning btn-sm">✏️ Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.MaLichSu" class="btn btn-danger btn-sm">🗑️ Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
