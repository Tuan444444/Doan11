@model DA.Models.LichSuLuuTru
@{
    ViewBag.Title = "Chi tiết lịch sử";
    Layout = "_ChuLayout";
}

<h2 class="mt-3">📖 Chi tiết lịch sử lưu trú</h2>

<div class="card p-4">
    <p><strong>Người thuê:</strong> @Model.NguoiThue?.HoTen</p>
    <p><strong>Phòng:</strong> @Model.Phong?.TenPhong</p>
    <p><strong>Ngày bắt đầu:</strong> @Model.NgayBatDau.ToString("dd/MM/yyyy")</p>
    <p><strong>Ngày kết thúc:</strong> @Model.NgayKetThuc.ToString("dd/MM/yyyy")</p>

    <a asp-action="Edit" asp-route-id="@Model.MaLichSu" class="btn btn-warning">✏️ Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">⬅️ Quay lại</a>
</div>
