@model DA.Models.LichSuLuuTru
@{
    ViewBag.Title = "Xóa lịch sử";
    Layout = "_ChuLayout";
}

<h2 class="mt-3 text-danger">⚠️ Xác nhận xóa lịch sử lưu trú</h2>

<div class="card p-4 border-danger">
    <p><strong>Người thuê:</strong> @Model.NguoiThue?.HoTen</p>
    <p><strong>Phòng:</strong> @Model.Phong?.TenPhong</p>
    <p><strong>Thời gian:</strong> @Model.NgayBatDau.ToString("dd/MM/yyyy") - @Model.NgayKetThuc.ToString("dd/MM/yyyy")</p>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="MaLichSu" />
        <button type="submit" class="btn btn-danger">🗑️ Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">⬅️ Hủy</a>
    </form>
</div>
