@model IEnumerable<DA.Models.HopDong>

@{
    ViewData["Title"] = "Danh sách hợp đồng";
    Layout = "_ChuLayout";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0 text-primary">📄 Danh sách hợp đồng</h2>
        <a asp-action="Create" class="btn btn-success">
            ➕ Thêm hợp đồng mới
        </a>
    </div>

    <table class="table table-hover table-bordered table-striped shadow-sm rounded">
        <thead class="table-dark">
            <tr class="text-center">
                <th>Người thuê</th>
                <th>Phòng</th>
                <th>Ngày bắt đầu</th>
                <th>Ngày kết thúc</th>
                <th>Tiền đặt cọc</th>
                <th>Trạng thái</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center align-middle">
                    <td>@item.MaNguoiThue</td>
                    <td>@item.MaPhong</td>
                    <td>@item.NgayBatDau?.ToString("dd/MM/yyyy")</td>
                    <td>@item.NgayKetThuc?.ToString("dd/MM/yyyy")</td>
                    <td>@String.Format("{0:N0} đ", item.TienDatCoc)</td>
                    <td>
                        <span class="badge
                                @(item.TrangThai == "Còn hiệu lực" ? "bg-success" :
                                                            item.TrangThai == "Hết hạn" ? "bg-warning text-dark" :
                                                            "bg-secondary")">
                        @item.TrangThai
                    </span>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaHopDong" class="btn btn-sm btn-warning">✏️ Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.MaHopDong" class="btn btn-sm btn-info text-white">👁️ Xem</a>
                    <a asp-action="Delete" asp-route-id="@item.MaHopDong" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc muốn xoá?')">🗑️ Xoá</a>

                    @if (item.TrangThai != "Hủy")
                        {
                            <a asp-action="Huy" asp-route-id="@item.MaHopDong" class="btn btn-sm btn-outline-danger"
                               onclick="return confirm('Xác nhận huỷ hợp đồng này?')">🚫 Huỷ</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
