@model DA.Models.TaiKhoan
@{
    Layout = "~/Views/Shared/_NguoiThueLayout.cshtml";
    var showPasswordForm = TempData["ShowPasswordForm"]?.ToString() == "true";
}

<div class="card shadow-sm p-5 mx-auto" style="max-width: 1000px;">
    <h4 class="mb-4 fw-bold">THÔNG TIN TÀI KHOẢN</h4>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info">@TempData["Message"]</div>
    }

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <!-- Form Thông tin tài khoản -->
    <div id="accountForm" style="display:@(showPasswordForm ? "none" : "block")">
        <form asp-action="TaiKhoan" method="post">
            <input type="hidden" asp-for="MaTaiKhoan" />

            <div class="row mb-4 align-items-center">
                <label class="col-sm-2 col-form-label">Tên đăng nhập</label>
                <div class="col-sm-10">
                    <input asp-for="TenDangNhap" class="form-control" readonly />
                </div>
            </div>

            <div class="row mb-4 align-items-center">
                <label class="col-sm-2 col-form-label">Mật khẩu</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" value="••••••" readonly />
                </div>
            </div>

            <div class="row mb-4 align-items-center">
                <label class="col-sm-2 col-form-label">Loại tài khoản</label>
                <div class="col-sm-10">
                    <input asp-for="LoaiTaiKhoan" class="form-control" readonly />
                </div>
            </div>

            <div class="row mb-4 align-items-center">
                <label class="col-sm-2 col-form-label">Trạng thái</label>
                <div class="col-sm-10">
                    <input asp-for="TrangThai" class="form-control" readonly />
                </div>
            </div>

            <div class="row mb-5 align-items-center">
                <label class="col-sm-2 col-form-label">Ngày tạo</label>
                <div class="col-sm-10">
                    <input asp-for="NgayTao" class="form-control" readonly />
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2"></div>
                <div class="col-sm-10 d-flex gap-2">
                    <button type="button" class="btn btn-warning" onclick="togglePasswordForm()">Đổi mật khẩu</button>
                </div>
            </div>
        </form>
    </div>

    <!-- Form Đổi mật khẩu -->
    <div id="passwordForm" style="display:@(showPasswordForm ? "block" : "none")">
        <form asp-action="DoiMatKhau" method="post">
            <h5 class="fw-semibold mb-3">ĐỔI MẬT KHẨU</h5>

            <div class="mb-3">
                <label class="form-label">Mật khẩu hiện tại</label>
                <input name="MatKhauCu" type="password" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Mật khẩu mới</label>
                <input name="MatKhauMoi" type="password" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Xác nhận mật khẩu mới</label>
                <input name="XacNhanMatKhau" type="password" class="form-control" required />
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">Xác nhận</button>
                <button type="button" class="btn btn-secondary" onclick="togglePasswordForm()">Hủy</button>
            </div>
        </form>
    </div>
</div>

<script>
    function togglePasswordForm() {
        const accountForm = document.getElementById("accountForm");
        const passwordForm = document.getElementById("passwordForm");

        accountForm.style.display = (accountForm.style.display === "none") ? "block" : "none";
        passwordForm.style.display = (passwordForm.style.display === "none") ? "block" : "none";
    }
</script>
