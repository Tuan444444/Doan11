@model DA.Models.PhanHoi
@{
    Layout = "~/Views/Shared/_NguoiThueLayout.cshtml";
}

<div class="card shadow-sm p-5 mx-auto" style="max-width: 800px;">
    <h4 class="mb-4 fw-bold">GỬI PHẢN HỒI</h4>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    <form asp-action="PhanHoi" method="post">
        <div class="mb-3">
            <label class="form-label">Nội dung phản hồi</label>
            <textarea asp-for="NoiDung" class="form-control" rows="5" required></textarea>
            <span asp-validation-for="NoiDung" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Gửi phản hồi</button>
    </form>
</div>
