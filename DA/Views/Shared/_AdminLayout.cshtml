<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            margin: 0;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 240px;
            height: 100vh;
            background-color: #212529;
            color: #fff;
            padding: 20px;
        }

            .sidebar .logo {
                font-size: 1.5rem;
                font-weight: bold;
                margin-bottom: 30px;
                display: block;
                color: #fff;
                text-decoration: none;
            }

            .sidebar .nav-link {
                color: #adb5bd;
            }

                .sidebar .nav-link:hover {
                    background: #343a40;
                    color: #fff;
                }

        .content {
            margin-left: 240px;
            padding: 30px;
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <a href="/HomePage/Index" class="logo">🏠 Trang chủ</a>

        <h6 class="text-uppercase text-secondary mt-4 mb-2">Quản lý</h6>
        <a href="/TaiKhoan/Index" class="nav-link">👥 Quản lý tài khoản</a>

        <div class="dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                📊 Báo cáo thống kê
            </a>
            <ul class="dropdown-menu dropdown-menu-dark">
                <li><a class="dropdown-item" href="/ThongKe/ThongKePhong">Phòng</a></li>
                <li><a class="dropdown-item" href="/ThongKe/NguoiDung">Người dùng</a></li>
                <li><a class="dropdown-item" href="/Reports/DoanhThu">Doanh thu</a></li>
            </ul>
        </div>
    </div>

    <div class="content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
