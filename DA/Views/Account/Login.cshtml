@model DA.ViewModels.LoginViewModel
@{
    
    Layout = "_LogLayout";
}

<div class="login-page">
    <div class="login-form-container">
        <h2>Đăng nhập</h2>

        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="TenDangNhap"></label>
                <input asp-for="TenDangNhap" placeholder="Tên đăng nhập" class="form-control" />
                <span asp-validation-for="TenDangNhap" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MatKhau"></label>
                <input asp-for="MatKhau" placeholder="Mật khẩu" type="password" class="form-control" />
                <span asp-validation-for="MatKhau" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-login">Đăng nhập</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
