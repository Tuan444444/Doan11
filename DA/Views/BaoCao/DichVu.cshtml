@{
    Layout = "_Layout";
    ViewData["Title"] = "🔌 Thống kê Dịch vụ";
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-3">
            @Html.Partial("_BaoCaoNav")
        </div>
        <div class="col-md-9">
            <h2 class="mb-4">@ViewData["Title"]</h2>
            <canvas id="dichVuChart"></canvas>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    new Chart(document.getElementById('dichVuChart'), {
        type: 'bar',
        data: {
            labels: @Html.Raw(Json.Serialize(ViewBag.DichVuTen)),
            datasets: [{
                label: 'Số lượng tiêu thụ',
                data: @Html.Raw(Json.Serialize(ViewBag.DichVuSoLuong)),
                backgroundColor: '#6610f2'
            }]
        },
        options: {
            responsive: true,
            indexAxis: 'y'
        }
    });
</script>

<style>
    canvas {
        max-height: 350px;
        width: 100%;
    }
</style>
