@{
    ViewData["Title"] = "📊 Thống kê Tổng Quan";
    Layout = "_Layout"; // nếu bạn có layout
}

<div class="container py-4">
    <h1 class="mb-4 text-center">@ViewData["Title"]</h1>

    <div class="row g-4">
        <!-- Dịch vụ -->
        <div class="col-md-6">
            <div class="card shadow-sm p-3">
                <h5 class="card-title">🔌 Dịch vụ tiêu thụ</h5>
                <canvas id="dichVuChart"></canvas>
            </div>
        </div>

        <!-- Doanh thu -->
        <div class="col-md-6">
            <div class="card shadow-sm p-3">
                <h5 class="card-title">💵 Doanh thu</h5>
                <p class="fw-bold">Tổng Doanh thu: <span class="text-success">@String.Format("{0:N0}", ViewBag.DoanhThu) VNĐ</span></p>
                <canvas id="doanhThuChart"></canvas>
            </div>
        </div>

        <!-- Hợp đồng -->
        <div class="col-md-6">
            <div class="card shadow-sm p-3">
                <h5 class="card-title">📄 Hợp đồng</h5>
                <canvas id="hdChart"></canvas>
            </div>
        </div>

        <!-- Người thuê -->
        <div class="col-md-6">
            <div class="card shadow-sm p-3">
                <h5 class="card-title">👥 Người thuê</h5>
                <p class="fw-bold">Tổng số người thuê: <span class="text-primary">@ViewBag.TongNguoiThue</span></p>
                <canvas id="nguoiThueChart"></canvas>
            </div>
        </div>

        <!-- Tình trạng phòng -->
        <div class="col-md-12">
            <div class="card shadow-sm p-3">
                <h5 class="card-title">🏠 Tình trạng phòng</h5>
                <canvas id="phongChart"></canvas>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    new Chart(document.getElementById('dichVuChart'), {
        type: 'bar',
        data: {
            labels: @Html.Raw(Json.Serialize(ViewBag.DichVuTen)),
            datasets: [{
                label: 'Số lượng tiêu thụ',
                data: @Html.Raw(Json.Serialize(ViewBag.DichVuSoLuong)),
                backgroundColor: '#6610f2'
            }]
        },
        options: {
            responsive: true
        }
    });

    new Chart(document.getElementById('doanhThuChart'), {
        type: 'doughnut',
        data: {
            labels: ['Doanh thu'],
            datasets: [{
                data: [@ViewBag.DoanhThu, 0],
                backgroundColor: ['#fd7e14', '#e9ecef']
            }]
        },
        options: {
            responsive: true,
            plugins: { legend: { position: 'bottom' } }
        }
    });

    new Chart(document.getElementById('hdChart'), {
        type: 'pie',
        data: {
            labels: ['Còn hiệu lực', 'Hết hạn'],
            datasets: [{
                data: [@ViewBag.HieuLuc, @ViewBag.HetHan],
                backgroundColor: ['#28a745', '#dc3545']
            }]
        },
        options: {
            responsive: true,
            plugins: { legend: { position: 'bottom' } }
        }
    });

    new Chart(document.getElementById('nguoiThueChart'), {
        type: 'doughnut',
        data: {
            labels: ['Người thuê'],
            datasets: [{
                data: [@ViewBag.TongNguoiThue, 0],
                backgroundColor: ['#007bff', '#e9ecef']
            }]
        },
        options: {
            responsive: true,
            plugins: { legend: { position: 'bottom' } }
        }
    });

    new Chart(document.getElementById('phongChart'), {
        type: 'pie',
        data: {
            labels: ['Trống', 'Đang thuê', 'Bảo trì'],
            datasets: [{
                data: [@ViewBag.Trong, @ViewBag.DaThue, @ViewBag.BaoTri],
                backgroundColor: ['#ffc107', '#17a2b8', '#6c757d']
            }]
        },
        options: {
            responsive: true,
            plugins: { legend: { position: 'bottom' } }
        }
    });
</script>

<style>
    h1 {
        font-weight: 700;
    }

    .card-title {
        font-weight: 600;
    }

    canvas {
        max-height: 300px;
    }

    .card {
        border: 1px solid #e0e0e0;
        border-radius: 12px;
    }
</style>
