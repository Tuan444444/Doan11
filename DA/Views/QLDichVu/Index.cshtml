@model IEnumerable<DA.Models.DichVu>

@{
    ViewData["Title"] = "Danh sách dịch vụ";
    Layout = "_ChuLayout";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary mb-0">🧾 Danh sách dịch vụ</h2>
        <a asp-action="Create" class="btn btn-success">
            ➕ Thêm dịch vụ mới
        </a>
    </div>

    <table class="table table-hover table-bordered table-striped shadow-sm rounded">
        <thead class="table-dark">
            <tr class="text-center">
                <th>@Html.DisplayNameFor(model => model.TenDichVu)</th>
                <th>@Html.DisplayNameFor(model => model.DonGia)</th>
                <th>@Html.DisplayNameFor(model => model.DonViTinh)</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center align-middle">
                    <td>@item.TenDichVu</td>
                    <td>@String.Format("{0:N0} đ", item.DonGia)</td>
                    <td>@item.DonViTinh</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.MaDichVu" class="btn btn-sm btn-warning">✏️ Sửa</a>
                        <a asp-action="Details" asp-route-id="@item.MaDichVu" class="btn btn-sm btn-info text-white">👁️ Xem</a>
                        <a asp-action="Delete" asp-route-id="@item.MaDichVu" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc muốn xoá?')">🗑️ Xoá</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
